<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd" autoReload="true" throwExceptions="false" internalLogLevel="Trace" internalLogFile="c:\temp\nlog-internal.log">

  <targets>
    <target xsi:type="File" name="logFile" fileName="${basedir}/BackUpManager/${shortdate}.log" layout="${longdate}--${uppercase:${level}}--${event-properties:item=side}--${callsite}(${message}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="logFile" />
  </rules>
</nlog>

